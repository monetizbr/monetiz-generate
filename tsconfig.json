{
  "compilerOptions": {
    "outDir": "./bin/",
    "sourceMap": false,
    "baseUrl": "./src",
    "paths": {
      "@commands/*": ["commands/*"],
      "@interfaces/*": ["types/interfaces/*"],
      "@utils/*": ["utils/*"]
    },
    "lib": ["dom", "es5", "es6", "es7"],
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["**/**/node_modules", "node_modules"]
}
